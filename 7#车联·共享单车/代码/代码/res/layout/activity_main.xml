<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_finished"
        android:gravity="center"
        android:text="组长未点名"
        android:textColor="@color/white"
        android:textSize="18dp" />
    
    <TextView
        android:id="@+id/textView12"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="周志员未点名"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/textview_finished"/>
    
    <TextView
        android:id="@+id/textView13"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
		android:layout_below="@+id/textView12"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="需求员未点名"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/textview_finished"/>
    
    <TextView
        android:id="@+id/textView14"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView13"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="优裁员未点名"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/textview_finished"/>
    
    <TextView
        android:id="@+id/textView15"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView14"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="展示员未点名"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:background="@drawable/textview_finished"/>
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toggleButton8"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_alignLeft="@+id/textView15"
        android:background="@drawable/bg" />
    
    <ToggleButton 
        android:id="@+id/toggleButton1" 
        android:layout_width="80dp" 
        android:layout_height="35dp" 
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/toggle_btn_bg_selector" 
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="80dp"
        android:layout_height="35dp"

        
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton1"
        
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="80dp"
        android:layout_height="35dp"


        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton2"
        android:layout_marginLeft="50dp"
        android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="80dp"
        android:layout_height="35dp"

        
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton3"
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="80dp"
        android:layout_height="35dp"


        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton4"
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="80dp"
        android:layout_height="35dp"


        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton5"
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn=" " />

    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="80dp"
        android:layout_height="35dp"


        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton6"
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=" "
        android:textOn="" />

    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="80dp"
        android:layout_height="35dp"


        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toggleButton7"
        android:layout_marginLeft="50dp"
         android:background="@drawable/toggle_btn_bg_selector"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toggleButton1"
        android:layout_marginLeft="25dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:layout_alignTop="@+id/toggleButton2"
        android:layout_marginLeft="25dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_alignTop="@+id/toggleButton3"
        android:layout_marginLeft="25dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignTop="@+id/toggleButton4"
        android:layout_marginLeft="25dp"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:layout_alignTop="@+id/toggleButton5"
        android:layout_marginLeft="25dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:layout_alignTop="@+id/toggleButton6"
        android:layout_marginLeft="25dp"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 
        android:layout_alignTop="@+id/toggleButton7"
        android:layout_marginLeft="25dp"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toggleButton8"
        android:layout_marginLeft="25dp"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="400dp"
        android:layout_height="40dp"
    
        android:layout_marginLeft="250dp"
        android:layout_alignBottom="@+id/toggleButton8"
        android:background="@drawable/button_pressed"
        android:text="退出"
        android:textColor="#fff" />
    
    <EditText
        android:id="@+id/username"
        android:layout_width="400dp"
        android:layout_height="46dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="92dp"
        android:layout_marginRight="35dp"
        android:hint="默认用户名：bicycle_10"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/password"
        android:layout_width="400dp"
        android:layout_height="46dp"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/username"
        android:hint="请输入密码"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="400dp"
        android:layout_height="46dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/username"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/username"
        android:text="登录"
        android:textSize="16sp" />
    
    <!--普通单车 -->
     <Button
        android:id="@+id/car1"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
     	android:layout_marginLeft="700dp"
        android:text="普通单车 "
        android:textSize="16sp" />
     <!-- 共享单车 -->
      <Button
        android:id="@+id/car2"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="110dp"
     	android:layout_marginLeft="700dp"
        android:text="共享单车"
        android:textSize="16sp" />
    <!-- 电池脚蹬单车 -->
       <Button
        android:id="@+id/car3"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginTop="160dp"
     	android:layout_marginLeft="700dp"
        android:text="电池脚蹬单车"
        android:textSize="16sp" />

</RelativeLayout>